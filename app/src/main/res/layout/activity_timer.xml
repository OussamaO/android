<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oussama.baintrainerapp.TimerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30S"
        android:id="@+id/textTimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1+1"
        android:id="@+id/textSom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/0"
        android:id="@+id/textScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#d58989" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="1"
            android:id="@+id/button1"
            android:background="#35c033"
            android:textSize="40dp"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="2"
            android:id="@+id/button2"
            android:background="#f82c2c"
            android:textSize="40dp"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="3"
            android:id="@+id/button3"
            android:background="#f7afe6"
            android:textSize="40dp"
            android:onClick="checkUitkomst" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="4"
            android:id="@+id/button4"
            android:background="#529ce6"
            android:textSize="40dp"
            android:onClick="checkUitkomst" />
    </GridLayout>

</RelativeLayout>
